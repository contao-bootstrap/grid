{
  "receipts": [
    "projects/contao-bundle/4.13-5.3"
  ],
  "config": {
    "phpConstraint": "^8.1"
  },
  "tools": {
    "composer": {
      "namespace": "ContaoBootstrap\\Grid"
    },
    "phpcq": {
