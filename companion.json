        "rector": false
      },
      "defaults": {
        "repositories": [
          "vendor/netzmacht/phpspec-phpcq-plugin/repository.json"
        ]
      },
      "presets": {
        "composer-require-checker": {
          "tasks": {
            "composer-require-checker": {
              "config":{
                "config_file": ".composer-require-checker.json"
              }
            }
          }
        }
      }
    },
    "psalm": {
      "configuration": {
        "errorLevel": "3"
      }
    }
  }
}
